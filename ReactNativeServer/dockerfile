# 使用 Ubuntu 20.04 作为基础镜像
FROM ubuntu:20.04

# 设置环境变量以避免交互式提示
ENV DEBIAN_FRONTEND=noninteractive

# 更新包列表并安装必要的工具
RUN apt-get update && \
    apt-get install -y wget gnupg curl ca-certificates lsb-release && \
    rm -rf /var/lib/apt/lists/*

# 添加 MongoDB 官方 GPG 密钥
RUN wget -qO - https://www.mongodb.org/static/pgp/server-6.0.asc | apt-key add -

# 添加 MongoDB 官方仓库
RUN echo "deb [ arch=arm64 ] https://repo.mongodb.org/apt/ubuntu focal/mongodb-org/6.0 multiverse" | \
    tee /etc/apt/sources.list.d/mongodb-org-6.0.list

# 更新包列表并安装 MongoDB
RUN apt-get update && \
    apt-get install -y mongodb-org && \
    rm -rf /var/lib/apt/lists/*

# 安装 Node.js 18
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制项目文件
COPY . .

# 安装项目依赖
RUN npm install

# 暴露端口
EXPOSE 3000 27017

# 启动 MongoDB 和应用程序
CMD ["bash", "-c", "mkdir -p /data/db && mongod --dbpath /data/db --bind_ip_all & npm start"]